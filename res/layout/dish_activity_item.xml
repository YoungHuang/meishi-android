<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:padding="5.0dip"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center"
  android:gravity="center">
    <RelativeLayout
    	android:id="@+id/mainLayout"
    	android:gravity="center"
		android:background="@drawable/pic_bg"
		android:padding="4.0dip"
		android:layout_width="150.0dip"
		android:layout_height="150.0dip">
		<ImageView
			android:id="@+id/dishImage"
			android:background="@drawable/null_dish"
			android:layout_width="150.0dip"
			android:layout_height="150.0dip"
			android:scaleType="centerCrop" />
		<!-- 标题 -->
		<LinearLayout
			android:id="@+id/topLayout"
			android:background="#ffffffff"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/dishName"
				android:textSize="14.0sp"
				android:textColor="#ff000000"
				android:padding="4.0dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="派辣鸡腿堡"
				android:singleLine="true"
				android:drawableRight="@drawable/arrow_gray"
				android:drawablePadding="2.0dip" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="27.0dip"
			android:layout_alignParentTop="true"
			android:layout_centerInParent="true">
			<TextView
				android:id="@+id/price"
				android:textSize="16.0sp"
				android:textColor="#ffffffff"
				android:background="#ffff7700"
				android:padding="4.0dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="TextView"
				android:shadowColor="#00000000" />
		</LinearLayout>
		<LinearLayout
			android:gravity="bottom|center"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true">
			<TextView
				android:id="@+id/minus"
				android:gravity="center"
				android:background="@drawable/selector_ic_minus"
				android:clickable="true"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="4.0dip"
				android:layout_weight="1.0" />
			<TextView
				android:id="@+id/count"
				android:textSize="18.0sp"
				android:textStyle="bold"
				android:textColor="#88000000"
				android:gravity="center"
				android:background="@drawable/quantity_bg"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:text="0" />
			<TextView
				android:id="@+id/plus"
				android:gravity="center"
				android:background="@drawable/selector_ic_plus"
				android:clickable="true"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_marginTop="4.0dip"
				android:layout_weight="1.0" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/moreLayout"
			android:gravity="center"
			android:orientation="vertical"
			android:background="#ffffffff"
			android:visibility="gone"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<ProgressBar
				android:id="@+id/loading"
				android:visibility="invisible"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:indeterminate="false"
				android:indeterminateDrawable="@drawable/loading_style" />
			<!-- 点击查看更多 -->
			<TextView
				android:id="@+id/more"
				android:textSize="18.0sp"
				android:textColor="#ff888888"
				android:gravity="center"
				android:layout_gravity="center"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/str_loading_more"
				android:drawableTop="@drawable/ic_more" />
		</LinearLayout>
	</RelativeLayout>
	<ImageView
		android:id="@+id/iv_dish_checked"
		android:background="@drawable/icon_order"
		android:visibility="gone"
		android:layout_width="150.0dip"
		android:layout_height="150.0dip" />
</RelativeLayout>
